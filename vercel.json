{
  "version": 2,
  "name": "thinkfirst",
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "prod",
    "DATABASE_URL": "@database-url",
    "REDISHOST": "@redis-host",
    "REDISPORT": "@redis-port",
    "JWT_SECRET": "@jwt-secret",
    "GEMINI_API_KEY": "@gemini-api-key",
    "GROQ_API_KEY": "@groq-api-key",
    "OPENAI_API_KEY": "@openai-api-key"
  }
}

